{
  "name": "bonchi-v3",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "install-all": "bun install && cd src/client && npm install",
    "nvm": "nvm use 22.15.0",
    "dev": "bun run --watch src/index.ts",
    "dev-server": "bun run --watch src/index.ts",
    "dev-client": "cd src/client && bun run dev",
    "build": "cd src/client && bun run build",
    "serve": "nvm use 22.15.0 && npm run install-all && npm run db:generate && npm run build && bun run start",
    "start": "pm2 start ecosystem.config.cjs || pm2 restart Bonchi\\ Portal",
    "stop": "pm2 stop Bonchi\\ Portal",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:reset": "bunx prisma migrate reset",
    "db:studio": "bunx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@prisma/extension-accelerate": "^3.0.1",
    "@types/cors": "^2.8.19",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "bun-types": "latest",
    "prisma": "^7.2.0"
  },
