generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  CUSTOMER
  BONCHI_MITRA
}

model User {
  id             String    @id @default(cuid())
  created_at      DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  email          String    @unique
  first_name
  password       String?
  role           Role      @default(CUSTOMER)
  age          Int?
  dob        DateTime?
  phone_number  String?
  street_address String?
  city          String?
  state         String?
  pincode      String?
  country       String?
  

}
