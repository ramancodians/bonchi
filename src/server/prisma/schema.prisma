generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Gender {
  MALE
  FEMALE
  OTHER
}

enum UserType {
  CUSTOMER
  BONCHI_MITRA
  ADMIN

}

model User {
  id                      String    @id @default(cuid())
  created_at              DateTime  @default(now())
  updated_at              DateTime  @updatedAt
  
  // Basic Information
  name                    String
  guardian_name           String
  gender                  Gender
  age                     Int
  mobile                  String    @unique
  
  // Address Information
  village                 String
  block                   String
  district                String
  state                   String
  pincode                 String?
  
  // Additional Information
  ayushman_card_available Boolean   @default(false)
  illness                 String?
  
  // Consent & Terms
  customer_consent        Boolean   @default(false)
  terms_accepted          Boolean   @default(false)
  
  // Authentication
  password                String?
  role                    UserType  @default(CUSTOMER)
  
  @@index([mobile])
  @@index([district])
  @@index([state])
}


